/* Animation rainbow background */
/* @keyframes animatedBackground {
    0% {
        background-position: 0;
    }
    100% {
        background-position: 500px;
    }
} */

@keyframes animatedBackground {
    0% {
        background-position: 0 0;
    }
    100% {
        background-position: 500px 0;
    }
}

@keyframes animatedShadow {
    0% {
        filter: drop-shadow(0 0 5px #fa2e2e);
    }
    14% {
        filter: drop-shadow(0 0 5px #ffaa00);
    }
    28% {
        filter: drop-shadow(0 0 5px #ffff55);
    }
    42% {
        filter: drop-shadow(0 0 5px #55ff55);
    }
    57% {
        filter: drop-shadow(0 0 5px #55ffff);
    }
    71% {
        filter: drop-shadow(0 0 5px #ff55ff);
    }
    100% {
        filter: drop-shadow(0 0 5px #ff5555);
    }
}
